generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chats     Chat[]
}

model Chat{
  id String @id @default(cuid())
  user_input String
  output_video_url String
  createdAt DateTime @default(now())
  userId String
  user User @relation(fields: [userId], references: [id])
}